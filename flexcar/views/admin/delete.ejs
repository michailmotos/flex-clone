<body>
        <div class="row">
            <div class="col-md-8 mx-auto">
                
            <div class="card-deck justify-content-center">
                
            <% cars.forEach(cars => { %>
                <div class="card mb-4" style="margin: 'auto';">
                    <div class="card-body">
                        <a href="/cars/<%= cars.slug %>">
                            <h4 class="card-title">
                                <%= cars.manufacturer %>
                                
                            </h4>
                            <h5 class="card-subtitle mb-2"><%= cars.model %></h5>
                        </a>
                        <div class ="card-text mb-2">
                            <%= cars.price %> € / month
                            <form action="/cars/<%= cars.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger"> Delete</button> </form>
                        </div>
                    </div>
                    
                </div>
            <% }) %> 
        </div>
        </div>
        
